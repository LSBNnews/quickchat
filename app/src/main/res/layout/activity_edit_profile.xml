<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/decor_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signup"
        android:layout_marginBottom="-50dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa hồ sơ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/ep_username"
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/user"
        android:drawablePadding="8sp"
        android:hint="Tên người dùng"
        android:padding="12dp"
        android:background="@drawable/type_box"
        android:inputType="textPersonName"
        android:layout_marginBottom="12dp"

        />

    <EditText
        android:id="@+id/ep_password"
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="8sp"
        android:hint="Mật khẩu"
        android:padding="12dp"
        android:background="@drawable/type_box"
        android:inputType="textPassword"
        android:layout_marginBottom="12dp" />


    <EditText
        android:id="@+id/ep_email"
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/email"
        android:drawablePadding="8sp"
        android:hint="Email"
        android:padding="12dp"
        android:background="@drawable/type_box"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/ep_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/photo"
            android:scaleType="centerCrop"
            android:background="@drawable/purple_stroke2_button"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/ep_chooseImage"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/purple_button"
            android:textColor="@color/white"

             />



    </LinearLayout>






    <Button
        android:id="@+id/ep_saveButton"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:background="@drawable/purple_button"
        android:textColor="@color/white"
        android:elevation="20dp"
        android:layout_marginBottom="10sp"
        android:translationZ="4dp"/>

    <Button
        android:id="@+id/ep_backButton"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/purple_stroke_button"
        android:textColor="#9900ff"

        android:layout_marginBottom="5dp"
        android:elevation="20dp"
        android:translationZ="4dp"
        tools:ignore="HardcodedText" />

</LinearLayout>
