<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/decor_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/signup"
            android:layout_marginBottom="-90dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/log_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:minWidth="350dp"
            android:maxWidth="400dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="8dp"
            android:background="@drawable/type_box"
            android:inputType="text"
            android:layout_marginBottom="12dp"
             />

        <EditText
            android:id="@+id/log_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:minWidth="350dp"
            android:maxWidth="400dp"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:hint="Mật khẩu"
            android:padding="12dp"
            android:background="@drawable/type_box"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/log_forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu ?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingTop="4dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Button
            android:id="@+id/log_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:text="Đăng nhập"
            android:minWidth="250dp"
            android:maxWidth="300dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/purple_button"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:elevation="20dp"
            android:translationZ="4dp"
           />
        <Button
            android:id="@+id/google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:text="Đăng nhập bằng Google"
            android:minWidth="250dp"
            android:maxWidth="300dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/black_stroke_button"
            android:textColor="@color/black"

            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:elevation="20dp"
            android:translationZ="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nếu đã có tài khoản ?"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/log_signupRedirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký ngay"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:paddingTop="4dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
