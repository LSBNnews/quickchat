<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/decor_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signup"
        android:layout_marginBottom="-50dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/log_username"
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:hint="Tên người dùng"
        android:padding="12dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="8sp"
        android:background="@drawable/type_box"
        android:inputType="text"
        android:layout_marginBottom="12dp"

        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/log_password"
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="8sp"
        android:hint="Mật khẩu"
        android:padding="12dp"
        android:background="@drawable/type_box"
        android:inputType="textPassword"
        android:layout_marginBottom="12dp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/log_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu ?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_gravity="right"
        android:layout_marginEnd="40dp"
        android:paddingTop="4dp"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/log_button"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/purple_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:elevation="20dp"
        android:translationZ="4dp"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/log_google"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Đăng nhập bằng Google"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/black_stroke_button"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="20dp"
        android:translationZ="4dp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nếu đã có tài khoản ?"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/log_signupRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký ngay"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:paddingTop="4dp"
        tools:ignore="HardcodedText" />



</LinearLayout>
