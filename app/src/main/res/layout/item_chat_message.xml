<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Tin nhắn gửi -->
    <LinearLayout
        android:id="@+id/sent_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="@drawable/sent_message_background"
        android:padding="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/sent_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a sent message"
            android:autoLink="all"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sent_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 PM, 01/01/2023"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/forward_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/forward"
            android:layout_gravity="end"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Tin nhắn nhận -->
    <LinearLayout
        android:id="@+id/received_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@drawable/received_message_background"
        android:padding="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/received_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a received message"
            android:textColor="@color/black"
            android:autoLink="all"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/received_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 PM, 01/01/2023"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>