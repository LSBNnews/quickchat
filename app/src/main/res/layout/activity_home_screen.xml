<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".HomeScreenActivity">
    <ImageView
        android:id="@+id/decor_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/signup"
        android:layout_marginBottom="-150dp"
        android:scaleType="fitXY"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/hs_image"
        android:background="@drawable/purple_stroke_button"
        android:layout_gravity="center_horizontal"
        android:elevation="50dp"
        android:translationZ="4dp"/>

    <TextView
        android:id="@+id/hs_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/hs_setting"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:translationZ="12dp"
            android:text="Cài đặt"
            android:gravity="center"
            android:padding="15dp"
            android:paddingLeft="20sp"
            android:background="@drawable/home_button"

            android:drawableTop="@drawable/settings_24"/>

        <Button
            android:id="@+id/hs_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:translationZ="4dp"
            android:text="Edit Profile"
            android:gravity="center"
            android:padding="15dp"

            android:background="@drawable/home_button"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/user" />

        <Button
            android:id="@+id/hs_signout"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_button"
            android:drawableTop="@drawable/home_24"
            android:text="Thoát"
            android:elevation="10dp"
            android:gravity="center"

            android:padding="15dp"
            android:translationZ="4dp" />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin nhắn"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_marginStart="5sp"
        android:layout_marginBottom="10sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/hs_search"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/black_stroke_button"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:hint="Tìm kiếm"
        android:textSize="17sp"
        android:drawableLeft="@drawable/search_24"
        android:paddingLeft="20sp" />



</LinearLayout>