<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".HomeScreenActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/qc_decoration"
        android:scaleType="fitXY"
        android:layout_marginBottom="-150sp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/profile_image"
        android:background="@drawable/purple_stroke_button"
        android:layout_gravity="center_horizontal"
        android:elevation="50dp"
        android:translationZ="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_username"
        android:text="Username"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/homeScreen_setting"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="20dp"
            android:translationZ="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/home_button"

            android:drawableTop="@drawable/settings_24"/>

        <Button
            android:id="@+id/homeScreen_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="20dp"
            android:translationZ="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/home_button"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/user" />

        <Button
            android:id="@+id/homeScreen_signout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="20dp"
            android:translationZ="4dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/home_button"
            android:drawableTop="@drawable/play_24"
            />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin nháº¯n"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_marginStart="5sp"
        tools:ignore="HardcodedText,RtlHardcoded" />


</LinearLayout>